{
  "name": "ts-project-template",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "TS_NODE_BASEURL=./dist node -r tsconfig-paths/register dist/index.js",
    "dev": "ts-node-dev -r tsconfig-paths/register --files --project tsconfig.json --respawn ./src/index.ts",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "build": "tsc --project tsconfig.build.json",
    "clean": "npm run build -- --clean"
  },
  "author": "Gustavo Martinez",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.0.1",
    "tsconfig-paths": "^4.1.0"
  },
  "devDependencies": {
    "@types/jest": "^28.1.6",
    "@types/node": "^18.6.1",
    "jest": "^28.1.3",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "ts-standard": "^11.0.0",
    "typescript": "^4.7.4"
  },
  "ts-standard": {
    "project": "./tsconfig.json"
  }
}
